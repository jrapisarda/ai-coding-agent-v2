{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AgentForge Specification",
  "type": "object",
  "required": ["project", "requirements"],
  "properties": {
    "project": {
      "type": "object",
      "required": ["name", "summary"],
      "properties": {
        "name": {"type": "string"},
        "summary": {"type": "string"},
        "version": {"type": "string"}
      },
      "additionalProperties": true
    },
    "requirements": {
      "type": "array",
      "items": {
        "anyOf": [
          {"type": "string"},
          {
            "type": "object",
            "required": ["id", "description"],
            "properties": {
              "id": {"type": "string"},
              "description": {"type": "string"}
            },
            "additionalProperties": true
          }
        ]
      }
    }
  },
  "additionalProperties": true
}
